                    </sap.ui.layout.form:formContainers>
                    <sap.ui.layout.form:layout>
                        <sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
                    </sap.ui.layout.form:layout></sap.ui.layout.form:Form>               
                    <FlexBox id="_IDGenFlexBox1" height="100px" alignItems="End" justifyContent="Start">
                <Button xmlns="sap.m" text="Giriş" width="120px" press=".onLogin" id="button0" class="sapUiLargeMargin"/>              
			</FlexBox>
                    

                </content>


                </Page>
            </pages>
        </App>
    </Shell>
